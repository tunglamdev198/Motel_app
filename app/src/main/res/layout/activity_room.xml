<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
            android:id="@+id/tbRoom"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/colorPrimary"
            android:gravity="center_vertical">

        <ImageView
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_back"/>

        <TextView
                android:layout_toRightOf="@id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Phòng"
                android:textColor="#fff"
                android:textSize="20sp"/>


    </RelativeLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tbCustomer"
            android:gravity="center"
            android:orientation="vertical">

        <EditText
                android:id="@+id/edtMaKhachTro"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Mã khách trọ"
                android:background="@drawable/bg_textview"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textSize="14dp"
                android:padding="8dp"
                android:maxLength="10"
                android:inputType="text"/>

        <EditText

                android:layout_marginTop="8dp"
                android:id="@+id/edtMaQL"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Mã quản lý"
                android:background="@drawable/bg_textview"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textSize="14dp"
                android:padding="8dp"
                android:maxLength="10"
                android:inputType="text"/>

        <EditText
                android:layout_marginTop="8dp"
                android:id="@+id/edtDienTich"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Diện tích"
                android:background="@drawable/bg_textview"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textSize="14dp"
                android:padding="8dp"
                android:maxLength="10"
                android:inputType="text"/>

        <EditText

                android:layout_marginTop="8dp"
                android:id="@+id/edtTinhTrang"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Tình trạng"
                android:background="@drawable/bg_textview"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textSize="14dp"
                android:padding="8dp"
                android:maxLength="10"
                android:inputType="text"/>

        <EditText

                android:layout_marginTop="8dp"
                android:id="@+id/edtGiaPhong"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Giá phòng"
                android:background="@drawable/bg_textview"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textSize="14dp"
                android:padding="8dp"
                android:maxLength="10"
                android:inputType="text"/>

        <Button
                android:id="@+id/btnAdd"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/bg_textview"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textSize="25sp"
                android:padding="8dp"
                android:text="Thêm"
                android:textAllCaps="false"
        />
    </LinearLayout>

</RelativeLayout>